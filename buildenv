# bump: z3-version /Z3_VERSION="(.*)"/ gitrefs:https://github.com/Z3Prover/z3.git|re:/z3-([\d.]+)/$1/|semver:*
Z3_VERSION="4.15.3"

###
### Build control file for the z3 port
###

###
### Required Environment Variables
###
export ZOPEN_BUILD_LINE="STABLE"
export ZOPEN_STABLE_URL="https://github.com/Z3Prover/z3.git" 
export ZOPEN_STABLE_TAG="z3-${Z3_VERSION}"
export ZOPEN_STABLE_DEPS="check_python cmake make coreutils bash which"
export ZOPEN_DEV_URL=""
export ZOPEN_DEV_DEPS="check_python cmake make coreutils bash which"
export ZOPEN_CATEGORIES="development math"
export ZOPEN_RUNTIME_DEPS=""

export ZOPEN_CONFIGURE="cmake"
export ZOPEN_CONFIGURE_OPTS="-B ../build --install-prefix \"\$ZOPEN_INSTALL_DIR/\" -DCMAKE_C_STANDARD=11 -DZ3_INSTALL_PYTHON_BINDINGS=ON -DZ3_BUILD_PYTHON_BINDINGS=ON -DCMAKE_INSTALL_PYTHON_PKG_DIR=\"\$ZOPEN_INSTALL_DIR/site-packages\" -DCMAKE_BUILD_TYPE=Release"

export ZOPEN_MAKE="cmake"
export ZOPEN_MAKE_OPTS="--build ../build --parallel \$ZOPEN_NUM_JOBS --config Release"
export ZOPEN_MAKE_MINIMAL=Y

export ZOPEN_INSTALL="cmake"
export ZOPEN_INSTALL_OPTS="--install ../build"

export ZOPEN_CHECK="ctest"
export ZOPEN_CHECK="skip"
export ZOPEN_CHECK_OPTS="--test-dir ../build  --output-on-failure"
# export ZOPEN_SYSTEM_PREREQ="zos25" # optional system pre-req (default=zos25)


###
### Build settings (Port type: BUILD, Build system: GNU Make)
###
